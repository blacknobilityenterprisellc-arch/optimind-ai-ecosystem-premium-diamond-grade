# OptiMind AI Ecosystem - Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="file:./prisma/dev.db"
DIRECT_URL="file:./prisma/dev.db"
SHADOW_DATABASE_URL="file:./prisma/shadow.db"

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV="development"
PORT="3000"
HOSTNAME="0.0.0.0"

# ===========================================
# AI SERVICES CONFIGURATION
# ===========================================
# Z.AI Web Dev SDK (Required)
ZAI_API_KEY="your-z-ai-api-key-here"

# OpenRouter (Optional - for enhanced AI models)
OPENROUTER_API_KEY="sk-or-v1-your-openrouter-api-key"

# Additional AI Services (Optional)
ANTHROPIC_API_KEY="your-anthropic-api-key"
OPENAI_API_KEY="your-openai-api-key"
GOOGLE_AI_API_KEY="your-google-ai-api-key"
GROQ_API_KEY="your-groq-api-key"

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Generate secure random secrets for production
JWT_SECRET="your-secure-jwt-secret-here"
ENCRYPTION_KEY="your-secure-encryption-key-here"
NEXTAUTH_SECRET="your-secure-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
DEBUG="true"
LOG_LEVEL="info"

# ===========================================
# DATABASE CONNECTION POOLING
# ===========================================
DATABASE_POOL_SIZE="10"
DATABASE_CONNECTION_TIMEOUT="30000"

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
SMTP_HOST="your-smtp-host"
SMTP_PORT="587"
SMTP_USER="your-smtp-username"
SMTP_PASS="your-smtp-password"
SMTP_FROM="your-email@domain.com"

# ===========================================
# REDIS CONFIGURATION (Optional)
# ===========================================
REDIS_URL="your-redis-url"

# ===========================================
# MONITORING & ANALYTICS (Optional)
# ===========================================
NEXT_PUBLIC_GA_ID="your-google-analytics-id"
SENTRY_DSN="your-sentry-dsn"

# ===========================================
# PAYMENT CONFIGURATION (Optional)
# ===========================================
STRIPE_API_KEY="your-stripe-api-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# ===========================================
# GITHUB INTEGRATION (Optional)
# ===========================================
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
TURBOPACK="1"
NEXT_TELEMETRY_DISABLED="1"