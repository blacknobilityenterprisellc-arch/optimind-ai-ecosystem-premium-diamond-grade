# =============================================================================
# OptiMind AI Ecosystem - Environment Variables Configuration
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment (development, production, test)
NODE_ENV=development

# Application URL (important for Next.js and OAuth)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Asset prefix for CDN (optional)
ASSET_PREFIX=

# =============================================================================
# DATABASE CONFIGURATION (Neon PostgreSQL)
# =============================================================================
# Primary database connection string
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Direct connection for migrations and CLI tools
DIRECT_URL="postgresql://username:password@host:port/database?sslmode=require"

# Shadow database for Prisma migrations
SHADOW_DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# PostgreSQL connection pool configuration
PGSSLMODE=require
PGHOST=your-neon-host
PGPORT=5432
PGUSER=your-username
PGPASSWORD=your-password
PGDATABASE=your-database
DATABASE_POOL_SIZE=20
DATABASE_CONNECTION_TIMEOUT=30000

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Google AI Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key
GOOGLE_AI_PROJECT_ID=your_google_project_id

# Z.AI Configuration
ZAI_API_KEY=your_zai_api_key
ZAI_BASE_URL=https://api.z-ai.com
ZAI_MODEL=glm-4.5

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Groq Configuration
GROQ_API_KEY=your_groq_api_key
GROQ_BASE_URL=https://api.groq.com/openai/v1

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Encryption Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here

# PIN Authentication (if enabled)
PIN_ENABLED=true
PIN_HASH=your_pin_hash_here
PIN_SALT=your_pin_salt_here

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000 # 24 hours

# =============================================================================
# PRISMA CONFIGURATION
# =============================================================================
PRISMA_SCHEMA_PATH=./prisma/schema.prisma
PRISMA_BINARY_PATH=./node_modules/.bin/prisma

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# SMTP Configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# File Storage Configuration
UPLOAD_MAX_SIZE=10485760 # 10MB in bytes
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf
UPLOAD_STORAGE_PATH=./uploads

# Cloud Storage (Optional - AWS S3, Google Cloud, etc.)
CLOUD_STORAGE_PROVIDER=s3
CLOUD_STORAGE_BUCKET=your-bucket-name
CLOUD_STORAGE_REGION=us-east-1
CLOUD_STORAGE_ACCESS_KEY=your_access_key
CLOUD_STORAGE_SECRET_KEY=your_secret_key

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Application Monitoring
MONITORING_ENABLED=true
MONITORING_ENDPOINT=https://your-monitoring-endpoint.com

# =============================================================================
# API RATE LIMITING & SECURITY
# =============================================================================
# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
SECURITY_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Memory Cache Configuration
CACHE_TTL=3600 # 1 hour in seconds
CACHE_MAX_SIZE=1000

# =============================================================================
# DEPLOYMENT PLATFORM CONFIGURATION
# =============================================================================
# Vercel Configuration
VERCEL_ENV=development
VERCEL_URL=your-vercel-app-url.vercel.app

# Netlify Configuration
NETLIFY_USE_YARN=true
NETLIFY_BUILD_CACHE=true
NETLIFY_SITE_ID=your_netlify_site_id

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Debug Configuration
DEBUG=optimind:*
LOG_LEVEL=info

# Development Features
DEV_MODE=true
DEV_TOOLS_ENABLED=true
HOT_RELOAD_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# AI Features
AI_TEXT_GENERATION_ENABLED=true
AI_IMAGE_GENERATION_ENABLED=true
AI_CODE_GENERATION_ENABLED=true
AI_ANALYSIS_ENABLED=true

# Advanced Features
MULTI_TENANT_ENABLED=true
ENTERPRISE_FEATURES_ENABLED=true
ADVANCED_ANALYTICS_ENABLED=true
REAL_TIME_FEATURES_ENABLED=true

# =============================================================================
# BUSINESS LOGIC CONFIGURATION
# =============================================================================
# User Credits Configuration
DEFAULT_USER_CREDITS=1000
DAILY_CREDIT_LIMIT=100
CREDIT_COST_PER_GENERATION=1

# Subscription Configuration
DEFAULT_SUBSCRIPTION_PLAN=FREE
TRIAL_PERIOD_DAYS=14

# AI Model Configuration
DEFAULT_AI_MODEL=glm-4.5
AI_MODEL_TIMEOUT=30000
AI_MODEL_MAX_TOKENS=4000

# =============================================================================
# EXTERNAL SERVICES INTEGRATION
# =============================================================================
# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_URL=https://your-webhook-endpoint.com

# Third-party APIs
STRIPE_API_KEY=your_stripe_api_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# GitHub Integration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Database
TEST_DATABASE_URL="postgresql://test:test@localhost:5432/test_db"

# Test Configuration
TEST_MODE=false
TEST_TIMEOUT=30000
TEST_REPORTER=spec

# =============================================================================
# PLATFORM-SPECIFIC VARIABLES
# =============================================================================
# Development Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
DATABASE_URL="postgresql://username:password@localhost:5432/optimind_dev"

# Production Environment (Vercel)
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://your-app.vercel.app
# DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Production Environment (Netlify)
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://your-app.netlify.app
# DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# =============================================================================
# IMPORTANT NOTES
# =============================================================================
# 1. Never commit this file with actual values to version control
# 2. Use different .env files for different environments
# 3. Store sensitive values in platform-specific environment variables
# 4. Regularly rotate API keys and secrets
# 5. Use strong, randomly generated secrets
# 6. Document all environment variables for your team
# =============================================================================